From 0000000000000000000000000000000000000000 Mon Sep 17 00:00:00 2001
From: Cheng Zhao <zcbenz@gmail.com>
Date: Wed, 22 Nov 2023 16:42:06 +0900
Subject: build: Correctly expose public symbols with v8_expose_symbols

This commit does 2 things:

1. Define BUILDING_V8_SHARED when v8_expose_symbols is set to true,
   which is the standard way to expose public V8 symbols for embedders
   like Node.js and Electron.
2. Add BUILDING_V8_SHARED_PRIVATE and USING_V8_SHARED_PRIVATE macros
   which control how private V8 symbols are exposed. Embedders do not
   need to expose those symbols and hiding them can reduce the binary
   size of `node.exe` and `node.lib`.

diff --git a/BUILD.gn b/BUILD.gn
index d8183683b25cca540e19bd2550f54311a19ffff3..2b73cf61ad2abc4ffa3a32a2e3fd26569b615d7b 100644
--- a/BUILD.gn
+++ b/BUILD.gn
@@ -755,9 +755,12 @@ config("internal_config") {
     ":cppgc_header_features",
   ]
 
-  if (is_component_build) {
+  if (is_component_build || v8_expose_symbols) {
     defines += [ "BUILDING_V8_SHARED" ]
   }
+  if (is_component_build) {
+    defines += [ "BUILDING_V8_SHARED_PRIVATE" ]
+  }
 
   if (v8_current_cpu == "riscv64" || v8_current_cpu == "riscv32") {
     if (!is_clang) {
@@ -830,7 +833,10 @@ config("external_config") {
   configs = [ ":headers_config" ]
   defines = []
   if (is_component_build) {
-    defines += [ "USING_V8_SHARED" ]
+    defines += [
+      "USING_V8_SHARED",
+      "USING_V8_SHARED_PRIVATE",
+    ]
   }
 
   if (current_cpu == "riscv64" || current_cpu == "riscv32") {
